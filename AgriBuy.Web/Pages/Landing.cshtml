@page
@model AgriBuy.Web.Pages.LandingModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h1 class="mb-2">Welcome, @Model.FullName!</h1>
    <p class="text-muted">Role: <strong>@Model.Role</strong></p>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-lines-fill fs-1 text-info mb-2"></i>
                    <h5 class="card-title">Update Profile</h5>
                    <a asp-area="Accounts" asp-page="/Profile/Update" class="btn btn-outline-info mt-2">Update</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-lock fs-1 text-warning mb-2"></i>
                    <h5 class="card-title">Change Password</h5>
                    <a asp-area="Accounts" asp-page="/Profile/ChangePassword" class="btn btn-outline-warning mt-2">Change</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-box-arrow-right fs-1 text-danger mb-2"></i>
                    <h5 class="card-title">Logout</h5>
                    <a asp-area="Accounts" asp-page="/Logout" class="btn btn-outline-danger mt-2">Logout</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-cart4 fs-1 text-success mb-2"></i>
                    <h5 class="card-title">Shopping Cart</h5>
                    <a asp-area="Buyer" asp-page="/ShoppingCart" class="btn btn-outline-success mt-2">View Cart</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-shop fs-1 text-success mb-2"></i>
                    <h5 class="card-title">Store</h5>
                    <a asp-area="Seller" asp-page="/Stores/Index" class="btn btn-outline-success mt-2">My Store</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <section class="py-4 overflow-hidden">
        <div class="d-flex flex-wrap justify-content-between mb-3">
            <h2 class="h4 mb-0">Categories</h2>
            <a asp-area="Buyer" asp-page="/Products" class="btn btn-primary">View All</a>
        </div>

        <div class="row">
            @foreach (var c in Model.Categories)
            {
                // Map a fixed image for each category (from wwwroot/images)
                string imagePath = c.Name.ToLower() switch
                {
                    "meat" => "~/images/meat.jpg",
                    "fish" => "~/images/fish.png",
                    "vegetables" => "~/images/vegetable.png",
                    "fruits" => "~/images/fruit.jpg",
                    "dairy" => "~/images/dairy.jpg",
                    "barter" => "~/images/remove the backgroun.png",
                    _ => "~/images/category-placeholder.png"
                };

                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <a asp-area="Buyer" asp-page="/Products" asp-route-categoryId="@c.Id" class="text-decoration-none text-dark">
                            <img src="@Url.Content(imagePath)" class="card-img-top" alt="@c.Name" style="height:180px; object-fit:cover;" />
                            <div class="card-body text-center">
                                <h5 class="card-title">@c.Name</h5>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>

    </section>
    <!-- Featured Products Section -->
    <section class="py-4 overflow-hidden">
        <div class="d-flex flex-wrap justify-content-between mb-3">
            <h2 class="h4 mb-0">Featured Products</h2>
            <a asp-area="Buyer" asp-page="/Products" class="btn btn-primary">View All</a>
        </div>

        @if (!Model.FeaturedProducts.Any())
        {
            <div class="alert alert-info">No products available yet.</div>
        }
        else
        {
            <div class="row">
                @foreach (var p in Model.FeaturedProducts)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="@Url.Content(p.ImagePath ?? "~/images/placeholder.png")"
                                 class="card-img-top"
                                 alt="@p.Name" />
                            <div class="card-body text-center">
                                <h5 class="card-title">@p.Name</h5>
                                <p class="card-text">₱ @p.UnitPrice.ToString("N2") / @p.UnitOfMeasure</p>

                                <form method="post" asp-page-handler="AddToCart">
                                    <input type="hidden" name="productId" value="@p.Id" />
                                    <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" />
                                    <button type="submit" class="btn btn-success">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>
</div>
