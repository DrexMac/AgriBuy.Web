@page
@model AgriBuy.Web.Areas.Buyer.Pages.ShoppingCartModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Shopping Cart";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: url('/images/loginbg.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        justify-content: center;
        padding: 40px 0;
    }

    .cart-card {
        width: 900px;
        background-color: rgba(244, 248, 237, 0.95);
        padding: 30px 25px;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        backdrop-filter: blur(5px);
    }

    .cart-header {
        font-weight: 700;
        font-size: 24px;
        color: #7a9a2f;
        text-align: center;
        margin-bottom: 20px;
    }

    a.back-link {
        display: inline-flex;
        align-items: center;
        background-color: #2e7d32;
        color: white;
        font-weight: 600;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        margin-bottom: 1rem;
        transition: background-color 0.2s;
    }

        a.back-link:hover {
            background-color: #27632a;
        }

    .table thead {
        background-color: #a5d6a7;
        color: #1b5e20;
    }

    .product-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 6px;
    }

    .order-total {
        text-align: right;
        font-weight: 700;
        font-size: 1.25rem;
        color: #2e7d32;
        margin-top: 1rem;
    }

    .checkout-btn {
        background-color: #2e7d32;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 6px;
        cursor: pointer;
        text-decoration: none;
    }

        .checkout-btn:hover {
            background-color: #27632a;
        }

    .clear-btn {
        background-color: wheat;
        color: black;
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 6px;
        cursor: pointer;
    }

        .clear-btn:hover {
            background-color: white;
        }

    .empty-message {
        text-align: center;
        color: #558b2f;
        font-weight: 600;
        margin: 2rem 0;
    }

    .cart-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 1rem;
        align-items: center;
    }

    .qty-control {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .qty-btn {
        width: 30px;
        height: 30px;
        border: none;
        border-radius: 5px;
        background-color: #a5d6a7;
        color: #1b5e20;
        font-weight: bold;
        cursor: pointer;
    }

        .qty-btn:hover {
            background-color: #81c784;
        }

    .qty-display {
        min-width: 40px;
        text-align: center;
        font-weight: 600;
    }

    hr {
        border: 1px solid #c5e1a5;
        margin: 30px 0;
    }

    h3 {
        color: #33691e;
        margin-bottom: 10px;
        font-weight: 700;
    }

    /* === Scrollable Recent Orders (show scrollbar only if >3) === */
    .recent-orders {
        max-height: 300px;
        overflow-y: auto;
        border: 1px solid #c8e6c9;
        border-radius: 8px;
        background-color: #fff;
        margin-top: 10px;
    }

        .recent-orders table {
            width: 100%;
            border-collapse: collapse;
        }

        .recent-orders th, .recent-orders td {
            border: 1px solid #ddd;
            padding: 12px 10px;
            text-align: left;
            font-size: 15px;
        }

        .recent-orders th {
            background-color: #a5d6a7;
            color: #1b5e20;
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .recent-orders tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .recent-orders::-webkit-scrollbar {
            width: 8px;
        }

        .recent-orders::-webkit-scrollbar-thumb {
            background: #a5d6a7;
            border-radius: 4px;
        }

            .recent-orders::-webkit-scrollbar-thumb:hover {
                background: #81c784;
            }
</style>

<div class="cart-card">
    <h2 class="cart-header">🛒 My Shopping Cart</h2>

    <a asp-page="/Landing" class="back-link">
        <i class="bi bi-arrow-left"></i> Continue Shopping
    </a>

    @if (!Model.CartItems.Any())
    {
        <div class="empty-message">Your cart is empty.</div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Unit</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content(item.ImagePath ?? "~/images/placeholder.png")"
                                 alt="@item.ProductName" class="product-img" />
                            <br />@item.ProductName
                        </td>
                        <td>@item.UnitOfMeasure</td>
                        <td>
                            <div class="qty-control">
                                <form method="post" asp-page-handler="Decrease" asp-route-cartItemId="@item.Id" style="display:inline;">
                                    <button type="submit" class="qty-btn">-</button>
                                </form>
                                <span class="qty-display">@item.Quantity</span>
                                <form method="post" asp-page-handler="Increase" asp-route-cartItemId="@item.Id" style="display:inline;">
                                    <button type="submit" class="qty-btn">+</button>
                                </form>
                            </div>
                        </td>
                        <td>₱ @(item.UnitPrice.ToString("N2"))</td>
                        <td>₱ @((item.UnitPrice * item.Quantity).ToString("N2"))</td>
                        <td>
                            <form method="post" asp-page-handler="Remove" asp-route-cartItemId="@item.Id">
                                <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="order-total">
            Total: ₱ @(Model.CartItems.Sum(x => x.UnitPrice * x.Quantity).ToString("N2"))
        </div>

        <div class="cart-actions">
            <form method="post" asp-page-handler="Clear" style="display:inline;">
                <button type="submit" class="clear-btn">Clear Cart</button>
            </form>

            <form method="post" asp-page-handler="Checkout" style="display:inline;">
                <button type="submit" class="checkout-btn">Proceed Checkout</button>
            </form>
        </div>
    }

    @if (Model.RecentPaidOrders.Any())
    {
        <hr />
        <h3>🧾 Recent Orders</h3>
        <div class="recent-orders">
            <table>
                <thead>
                    <tr>
                        <th>OR Number</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                        <th>Pay Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.RecentPaidOrders)
                    {
                        foreach (var item in order.OrderItems)
                        {
                            <tr>
                                <td>@order.ORNumber</td>
                                <td>@item.Product?.Name</td>
                                <td>@item.Quantity</td>
                                <td>₱ @item.UnitPrice.ToString("N2")</td>
                                <td>₱ @((item.Quantity * item.UnitPrice).ToString("N2"))</td>
                                <td>@order.PayDate?.ToString("MMM dd, yyyy hh:mm tt")</td>
                                <td>Delivered</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
</div>
