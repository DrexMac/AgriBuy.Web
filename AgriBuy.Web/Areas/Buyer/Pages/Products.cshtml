@page
@model AgriBuy.Web.Areas.Buyer.Pages.ProductsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Products";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #fdfaf6;
        display: flex;
        min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
        width: 240px;
        background-color: #6b4226;
        color: white;
        padding: 25px;
        flex-shrink: 0;
        height: 100vh;
        position: sticky;
        top: 0;
    }

        .sidebar h2 {
            margin-bottom: 30px;
            text-align: center;
            font-size: 24px;
            color: #f5deb3;
        }

    .category-menu {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

        .category-menu a {
            text-decoration: none;
            color: #f5f5f5;
            padding: 10px 15px;
            border-radius: 6px;
            transition: background 0.3s;
        }

            .category-menu a:hover {
                background-color: #8b5e3c;
            }

    /* Main Content */
    .main {
        flex-grow: 1;
        padding: 40px 60px;
    }

        .main h1 {
            font-size: 32px;
            color: #6b4226;
            margin-bottom: 30px;
        }

    .product-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        justify-content: center;
    }

    .product-card {
        width: 240px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 12px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

        .product-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

    .product-info {
        padding: 15px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        text-align: center;
    }

        .product-info h3 {
            font-size: 18px;
            margin-bottom: 8px;
            color: #333;
        }

        .product-info p {
            font-size: 16px;
            color: #6b4226;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .product-info form {
            margin-top: auto;
        }

        .product-info button {
            padding: 10px;
            background-color: #6b4226;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
        }

            .product-info button:hover {
                background-color: #8b5e3c;
            }
</style>

<div class="sidebar">
    <h2>AgriBuy</h2>
    <div class="category-menu">
        @foreach (var category in Model.CategoriesWithProducts)
        {
            <a asp-page="/Products" asp-area="Buyer" asp-route-categoryId="@category.Id">@category.Name</a>
        }
    </div>
</div>

<div class="main">
    <h1>Products</h1>

    @if (!Model.CategoriesWithProducts.Any() || Model.CategoriesWithProducts.All(c => !c.Products.Any()))
    {
        <div class="alert alert-info">No products available in this category.</div>
    }
    else
    {
        <div class="product-grid">
            @foreach (var category in Model.CategoriesWithProducts)
            {
                @foreach (var product in category.Products)
                {
                    <div class="product-card">
                        <img src="@Url.Content(product.ImagePath ?? "~/images/placeholder.png")" alt="@product.Name" />
                        <div class="product-info">
                            <h3>@product.Name</h3>
                            <p>₱ @product.UnitPrice.ToString("N2") / @product.UnitOfMeasure</p>

                            <form method="post" asp-page-handler="AddToCart">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" />
                                <button type="submit"><i class="fas fa-cart-plus"></i> Add to Cart</button>
                            </form>
                        </div>
                    </div>
                }
            }
        </div>
    }
</div>
