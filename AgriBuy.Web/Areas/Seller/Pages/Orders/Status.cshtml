@page
@model AgriBuy.Web.Areas.Seller.Pages.Orders.StatusModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Order Status";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: url('/images/loginbg.jpg') no-repeat center center fixed;
        background-size: cover;
        padding: 40px 0;
        display: flex;
        justify-content: center;
    }

    .orders-card {
        width: 90%;
        max-width: 1000px;
        background-color: rgba(244, 248, 237, 0.95);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    h1 {
        text-align: center;
        color: #2e7d32;
        margin-bottom: 10px;
        font-weight: 700;
    }

    .table-container {
        max-height: 300px; 
        overflow-y: auto;
        border: 1px solid #c8e6c9;
        border-radius: 8px;
        background-color: #fff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        min-width: 600px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px 10px;
        text-align: left;
        font-size: 15px;
    }

    th {
        background-color: #a5d6a7;
        color: #1b5e20;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .paid {
        color: #2e7d32;
        font-weight: bold;
    }

    .shipping-section {
        margin-top: 10px;
        background-color: #f1f8e9;
        border: 1px solid #c5e1a5;
        padding: 15px;
        border-radius: 8px;
        color: #33691e;
    }

        .shipping-section h2 {
            font-size: 18px;
            margin-bottom: 8px;
        }

    .no-orders {
        text-align: center;
        padding: 20px;
        color: #666;
    }

    /* Scrollbar styling (for modern browsers) */
    .table-container::-webkit-scrollbar {
        width: 8px;
    }

    .table-container::-webkit-scrollbar-thumb {
        background: #a5d6a7;
        border-radius: 4px;
    }

        .table-container::-webkit-scrollbar-thumb:hover {
            background: #81c784;
        }
</style>

<div class="orders-card">
    <h1>🧾 Order Status</h1>

    @if (!Model.Orders.Any())
    {
        <div class="no-orders">No orders found for this store.</div>
    }
    else
    {
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Buyer</th>
                        <th>Total Price</th>
                        <th>OR Number</th>
                        <th>Pay Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.OrderNumber</td>
                            <td>@($"{order.User?.FirstName} {order.User?.LastName}")</td>
                            <td>₱ @order.TotalPrice.ToString("N2")</td>
                            <td>@order.ORNumber</td>
                            <td>@order.PayDate?.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td class="paid">COMPLETED</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- Reserved Shipping Section -->
    <div class="shipping-section">
        <h2>🚚 Shipping Details (Coming Soon)</h2>
        <p>This area will display shipment tracking and cash-on-delivery status.</p>
    </div>
</div>
