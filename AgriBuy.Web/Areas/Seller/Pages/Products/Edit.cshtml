@page
@model AgriBuy.Web.Areas.Seller.Pages.Products.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Product";
}

<style>
    body, html {
        margin: 0;
        height: 100%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: url('/images/loginbg.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .create-card {
        width: 600px;
        background-color: rgba(244, 248, 237, 0.95);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        backdrop-filter: blur(4px);
    }

    .create-header {
        font-weight: 700;
        color: #2e7d32;
        margin-bottom: 1.5rem;
        text-align: center;
        font-size: 1.8rem;
    }

    /* Form controls aligned  */
    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

        .form-group label {
            width: 140px; /*  width for labels */
            margin-right: 10px;
            font-weight: 600;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            flex: 1;
            max-width: 200px;
            padding: 0.4rem 0.5rem;
            border-radius: 4px;
            border: 1px solid #a5d6a7;
            font-size: 0.8rem;
        }

        /* Description */
        .form-group textarea {
            height: 60px;
            resize: vertical;
        }

        /* Store name readonly field */
        .form-group input[readonly] {
            background-color: #e8f5e8;
            color: #555;
        }

    .btn-create {
        background-color: #2e7d32;
        gap: 50px;
        color: white;
        border: none;
        padding: 0.6rem 1.5rem;
        justify-content: flex-start;
        font-weight: 600;
        border-radius: 6px;
        cursor: pointer;
        text-decoration: none;
        display: flex;
        width: 120px;
        text-align: center;
    }

        .btn-create:hover {
            background-color: #27632a;
        }

    
    .btn-secondary {
        width: 140px; /* equal width */
        padding: 0.6rem 1rem; /* adjust height if needed */
        text-align: center;
        font-weight: 600;
        border-radius: 6px;
        cursor: pointer;
    }

        

    a.back-link {
        display: inline-block;
        margin-top: 1.5rem;
        color: #2e7d32;
        font-weight: 600;
        text-decoration: none;
        margin-left: 150px; /* align with inputs */
    }

        a.back-link:hover {
            text-decoration: underline;
        }

    .button-group {
        margin-left: 150px;
        margin-top: 1rem;
    }
</style>

<div class="create-card">
    <h2 class="create-header"><i class="bi bi-pencil-square"></i> Edit Product</h2>

    @if (Model.Product == null)
    {
        <h2>No product found</h2>
    }
    else
    {
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Product.Id" />

            <div class="form-group">
                <label>Store</label>
                <input class="form-control" value="@Model.StoreName" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" required />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.UnitOfMeasure"></label>
                <input asp-for="Product.UnitOfMeasure" class="form-control" required />
                <span asp-validation-for="Product.UnitOfMeasure" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.UnitPrice"></label>
                <input asp-for="Product.UnitPrice" type="number" class="form-control" required />
                <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Quantity"></label>
                <input asp-for="Product.Quantity" type="number" class="form-control" required />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile">Change Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>

            <div class="button-group">
                <button type="submit" class="btn-create">Save Changes</button> <div> </div> 
                <a asp-area="Seller" asp-page="/Stores/Details" asp-route-storeid="@Model.Product.StoreId" class="btn-secondary">
                    Back to Store
                </a>
            </div>
        </form>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}