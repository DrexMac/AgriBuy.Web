@page
@model AgriBuy.Web.Areas.Seller.Pages.Products.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <h1 class="display-4 text-center">Update Product Information</h1>
    <p class="lead text-center">Update the details of your product.</p>

    <form method="post">
        <input type="hidden" asp-for="Products.Id" />

        <div class="mb-3">
            <label asp-for="Products.Name" class="form-label">Name</label>
            <input asp-for="Products.Name" class="form-control" required />
            <span asp-validation-for="Products.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Store</label>
            <input class="form-control" value="@Model.StoreName" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Products.UnitOfMeasure" class="form-label">Unit Of Measure</label>
            <input asp-for="Products.UnitOfMeasure" class="form-control" required />
            <span asp-validation-for="Products.UnitOfMeasure" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Products.UnitPrice" class="form-label">Unit Price</label>
            <input asp-for="Products.UnitPrice" type="number" class="form-control" required />
            <span asp-validation-for="Products.UnitPrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Products.Quantity" class="form-label">Quantity</label>
            <input asp-for="Products.Quantity" type="number" class="form-control" required />
            <span asp-validation-for="Products.Quantity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-page="Index" class="btn btn-secondary">Back to Product List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // If you add dynamic fields, add JS here
    </script>
}