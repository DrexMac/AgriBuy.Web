@page
@model AgriBuy.Web.Areas.Seller.Pages.Products.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Product";
}

<style>
    body, html {
        margin: 0;
        height: 100%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: url('/images/loginbg.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .create-card {
        width: 600px;
        background-color: rgba(244, 248, 237, 0.95);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        backdrop-filter: blur(4px);
    }

    .create-header {
        font-weight: 700;
        color: #2e7d32;
        margin-bottom: 1.5rem;
        text-align: center;
        font-size: 1.8rem;
    }

    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

        .form-group label {
            width: 140px;
            margin-right: 10px;
            font-weight: 600;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            flex: 1;
            max-width: 200px;
            padding: 0.4rem 0.5rem;
            border-radius: 4px;
            border: 1px solid #a5d6a7;
            font-size: 0.8rem;
        }

        .form-group textarea {
            height: 60px;
            resize: vertical;
        }

    .btn-create {
        background-color: #2e7d32;
        color: white;
        border: none;
        padding: 0.6rem 1.5rem;
        font-weight: 600;
        border-radius: 6px;
        cursor: pointer;
        width: 100px;
        margin-left: 150px;
    }

        .btn-create:hover {
            background-color: #27632a;
        }

    a.back-link {
        display: inline-block;
        margin-top: 1.5rem;
        color: #2e7d32;
        font-weight: 600;
        text-decoration: none;
        margin-left: 150px;
    }

        a.back-link:hover {
            text-decoration: underline;
        }
</style>


<div class="create-card">
    <h2 class="create-header"><i class="bi bi-plus-circle"></i> Add New Product</h2>

    <form method="post" enctype="multipart/form-data">
        <input asp-for="StoreId" type="hidden" />

        <div class="form-group">
            <label asp-for="Input.Name"></label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.UnitOfMeasure"></label>
            <select asp-for="Input.UnitOfMeasure" class="form-control">
                <option value="">-- Select Unit --</option>
                <option value="Kg">Kg</option>
                <option value="L">L</option>
                <option value="Piece">Piece</option>
                <option value="Box">Box</option>
                <option value="Pack">Pack</option>
                <option value="Set">Set</option>
            </select>
            <span asp-validation-for="Input.UnitOfMeasure" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.UnitPrice"></label>
            <input asp-for="Input.UnitPrice" class="form-control" />
            <span asp-validation-for="Input.UnitPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Quantity"></label>
            <input asp-for="Input.Quantity" class="form-control" />
            <span asp-validation-for="Input.Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Description"></label>
            <textarea asp-for="Input.Description" class="form-control"></textarea>
            <span asp-validation-for="Input.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Image"></label>
            <input asp-for="Input.Image" type="file" class="form-control" />
            <span asp-validation-for="Input.Image" class="text-danger"></span>
        </div>

        <!-- ✅ Category Dropdown -->
        <div class="form-group">
            <label asp-for="Input.CategoryId">Category</label>
            <select asp-for="Input.CategoryId" class="form-control"
                    asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn-create">Create</button>
        </div>
    </form>

    <a asp-area="Seller"
       asp-page="/Stores/Details"
       asp-route-storeid="@Model.StoreId"
       class="back-link">
        ← Back to Store
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
