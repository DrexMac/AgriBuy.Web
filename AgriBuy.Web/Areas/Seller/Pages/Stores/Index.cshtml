@page
@model AgriBuy.Web.Areas.Seller.Pages.Stores.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "My Store";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: url('/images/loginbg.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        justify-content: center;
        padding: 40px 0;
    }

    .details-card {
        width: 820px;
        background-color: rgba(244, 248, 237, 0.90);
        padding: 20px 30px;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        backdrop-filter: blur(5px);
    }

        .details-card h1 {
            font-weight: 700;
            font-size: 24px;
            color: #7a9a2f;
            text-align: center;
            margin-bottom: 16px;
        }

    .top-actions {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 12px;
    }

    .create-btn {
        background-color: #388e3c;
        color: white;
        font-weight: 600;
        border-radius: 6px;
        padding: 8px 14px;
        border: none;
    }

        .create-btn:hover {
            background-color: #2e7d32;
            color: white;
        }

    .store-detail .input-group {
        display: flex;
        flex-direction: column;
        text-align: left;
        margin-bottom: 12px;
    }

    .store-detail label {
        font-weight: 700;
        color: #6b3902;
        margin-bottom: 6px;
    }

    .table thead {
        background-color: #a5d6a7;
        color: #1b5e20;
    }

    .btn-action {
        margin-right: 0.3rem;
    }

    .empty-message {
        text-align: center;
        color: #558b2f;
        font-weight: 600;
        margin: 2rem 0;
    }

    a.back-link {
        display: inline-block;
        margin-top: 18px;
        color: #2e7d32;
        font-weight: 600;
        font-size: 14px;
        text-decoration: none;
        padding: 6px 12px;
        border: 1.5px solid #2e7d32;
        border-radius: 12px;
        transition: 0.3s;
    }

        a.back-link:hover {
            background: #2e7d32;
            color: white;
        }
</style>

<div class="details-card">
    <h1>My Store</h1>

    @* Show Add Store only if user has no store *@
    @if (Model.Stores == null || !Model.Stores.Any())
    {
        <div class="top-actions">
            <a asp-page="Create" class="create-btn"> Open My Store </a>
        </div>

        <div class="empty-message">
            “Open your Store and let’s get started.”
        </div>
    }
    else
    {
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Owner (User Id)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var store in Model.Stores)
                {
                    <tr>
                        <td>@store.Name</td>
                        <td>@store.UserId</td>
                        <td>
                            <a asp-page="./Details" asp-route-storeid="@store.Id" class="btn btn-sm btn-success btn-action">Details</a>
                            <a asp-page="./Edit" asp-route-storeid="@store.Id" class="btn btn-sm btn-primary btn-action">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-page="/Landing" class="back-link">← Back to Dashboard</a>
</div>
