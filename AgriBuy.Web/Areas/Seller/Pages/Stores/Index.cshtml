@page
@model AgriBuy.Web.Areas.Seller.Pages.Stores.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "My Store List";
}

<style>
    body, html {
        height: 100%;
        background: linear-gradient(135deg, #81c784 0%, #388e3c 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .store-list-card {
        width: 900px;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        background: white;
        padding: 2rem 2.5rem;
        margin-top: 3rem;
    }

    .store-list-header {
        font-weight: 700;
        color: #2e7d32;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .table thead {
        background-color: #a5d6a7;
        color: #1b5e20;
    }

    .btn-action {
        margin-right: 0.3rem;
    }

    .empty-message {
        text-align: center;
        color: #558b2f;
        font-weight: 600;
        margin: 2rem 0;
    }

    .create-btn {
        background-color: #388e3c;
        color: white;
        font-weight: 600;
        border-radius: 6px;
        margin-bottom: 1.5rem;
    }

        .create-btn:hover {
            background-color: #2e7d32;
            color: white;
        }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="store-list-card">
        <h2 class="store-list-header">My Store List</h2>
        <div class="mb-3 text-end">
            <a asp-page="Create" class="btn create-btn">+ Add Store</a>
        </div>
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Owner (User Id)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Stores != null && Model.Stores.Any())
                {
                    @foreach (var store in Model.Stores)
                    {
                        <tr>
                            <td>@store.Name</td>
                            <td>@store.UserId</td>
                            <td>
                                <a asp-page="./Details" asp-route-storeid="@store.Id" class="btn btn-sm btn-success btn-action">Details</a>
                                <a asp-page="./Edit" asp-route-storeid="@store.Id" class="btn btn-sm btn-primary btn-action">Edit</a>
                                <a asp-page="./Delete" asp-route-storeid="@store.Id" class="btn btn-sm btn-danger btn-action">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="empty-message">
                            No stores available yet!
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <a asp-page="/Landing" class="back-link">← Back to Dashboard</a>
    </div>
</div>
