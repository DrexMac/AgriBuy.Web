@page
@model AgriBuy.Web.Areas.Seller.Pages.Stores.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Store Details";
}

<div class="container mt-5">
    <h1 class="display-4 text-center">Store Details</h1>

    @if (Model.Store == null)
    {
        <h2>No record found</h2>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-3">Store Name</dt>
            <dd class="col-sm-9">@Model.Store.Name</dd>

            <dt class="col-sm-3">Owner/User Id</dt>
            <dd class="col-sm-9">@Model.Store.UserId</dd>
        </dl>
        <a asp-page="Edit" asp-route-storeid="@Model.Store.Id" class="btn btn-primary">Edit</a>
        <a asp-page="Delete" asp-route-storeid="@Model.Store.Id" class="btn btn-danger">Delete</a>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    }
</div>