@page
@model AgriBuy.Web.Areas.Seller.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Manage Products";
}

<h2 class="mb-3">Manage Products</h2>

<a asp-page="./Add" class="btn btn-primary mb-3">+ Add New Product</a>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Available</th>
            <th>Store</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.UnitPrice.ToString("C")</td>
                <td>@product.Quantity</td>
                <td>@product.UnitOfMeasure</td>
                <td>
                    @(product.IsAvailable ? "Yes" : "No")
                </td>
                <td>@product.StoreName</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
