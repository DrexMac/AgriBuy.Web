@page
@model AgriBuy.Web.Areas.Seller.Pages.Product.AddModel
@{
    ViewData["Title"] = "Add Product";
}

<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-primary">Product Details</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductVM.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductVM.Name" class="form-control" />
                    <span asp-validation-for="ProductVM.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductVM.Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="ProductVM.Description" class="form-control"></textarea>
                    <span asp-validation-for="ProductVM.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductVM.UnitPrice"></label>
                </div>
                <div class="input-group col-8">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">RM</span>
                    </div>
                    <input type="number" step="0.01" asp-for="ProductVM.UnitPrice" class="form-control" />
                    <span asp-validation-for="ProductVM.UnitPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductVM.StoreId">Store (Category)</label>
                </div>
                <div class="col-8">
                    <select asp-for="ProductVM.StoreId" asp-items="Model.StoreList" class="form-control">
                        <option value="">-- Select Store --</option>
                    </select>
                    <span asp-validation-for="ProductVM.StoreId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Image
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-success form-control">Add</button>
                        </div>
                        <div class="col">
                            <a asp-page="./Index" class="btn btn-danger form-control">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
