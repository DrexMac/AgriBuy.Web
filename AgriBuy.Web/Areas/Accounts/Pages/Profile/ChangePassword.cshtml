@page
@model AgriBuy.Web.Areas.Accounts.Pages.Profile.ChangePasswordModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Change Password";
}

<style>
    body, html {
        height: 100%;
        background: linear-gradient(135deg, #81c784 0%, #388e3c 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .change-password-card {
        width: 400px;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        background: white;
        padding: 2rem;
    }

    .change-password-header {
        font-weight: 700;
        color: #2e7d32;
    }

    .change-password-subheader {
        font-weight: 500;
        color: #4caf50;
        margin-bottom: 1.5rem;
    }

    a {
        color: #2e7d32;
        font-weight: 600;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="change-password-card">
        <h2 class="text-center change-password-header mb-3">Change Password</h2>
        <h5 class="text-center change-password-subheader mb-4">Secure your account</h5>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                @Model.ErrorMessage
            </div>
        }

        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Input.CurrentPassword">Current Password <span class="text-danger">*</span></label>
                <input asp-for="Input.CurrentPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.NewPassword">New Password <span class="text-danger">*</span></label>
                <input asp-for="Input.NewPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Input.ConfirmNewPassword">Confirm Password <span class="text-danger">*</span></label>
                <input asp-for="Input.ConfirmNewPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmNewPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Change Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
