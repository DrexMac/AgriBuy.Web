@page
@model AgriBuy.Web.Areas.Accounts.Pages.Profile.ChangePasswordModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Change Password";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        height: 100vh;
        background: url('/images/loginbg.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .change-card {
        position: relative;
        z-index: 1;
        width: 420px;
        background-color: rgba(244, 248, 237, 0.85);
        padding: 40px 30px;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        text-align: center;
        backdrop-filter: blur(5px);
    }

    .logo {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 7px;
        margin-bottom: 20px;
    }

        .logo img {
            width: 40px;
            height: auto;
        }

        .logo span {
            font-weight: 700;
            color: #7a9a2f;
            font-size: 22px;
        }

    h2 {
        font-weight: 700;
        font-size: 24px;
        color: #7a9a2f;
        margin-bottom: 6px;
    }

    p.description {
        color: #7a9a2f;
        font-weight: 400;
        margin-top: 0;
        margin-bottom: 20px;
        font-size: 14px;
    }

    label {
        font-weight: 700;
        font-size: 14px;
        color: #6b3902;
        margin-bottom: 5px;
        text-align: left;
    }

    .input-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
        text-align: left;
    }

    input {
        border: 1.5px solid #7a9a9a;
        padding: 8px 10px;
        font-size: 14px;
        border-radius: 3px;
        outline: none;
        width: 100%;
    }

    .btn-change {
        background-color: #7a9a2f;
        color: white;
        font-weight: 700;
        border: none;
        border-radius: 18px;
        padding: 10px 26px;
        cursor: pointer;
        width: 100%;
        margin-top: 10px;
    }

    .back-link {
        display: inline-block;
        margin-top: 12px;
        color: #2e7d32;
        font-weight: 600;
        font-size: 14px;
        text-decoration: none;
        padding: 6px 12px;
        border: 1.5px solid #2e7d32;
        border-radius: 12px;
        transition: 0.3s;
    }

        .back-link:hover {
            background: #2e7d32;
            color: white;
        }
</style>

<div class="change-card">
    <div class="logo">
        <img src="~/images/remove the backgroun.png" alt="AgriBuy Logo" />
        <span>AGRIBUY</span>
    </div>

    <h2>Change Password</h2>
    <p class="description">Secure your account by updating your password</p>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post" novalidate>
        <div class="input-group">
            <label asp-for="Input.CurrentPassword">Current Password</label>
            <input asp-for="Input.CurrentPassword" type="password" required />
            <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
        </div>

        <div class="input-group">
            <label asp-for="Input.NewPassword">New Password</label>
            <input asp-for="Input.NewPassword" type="password" required />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>

        <div class="input-group">
            <label asp-for="Input.ConfirmNewPassword">Confirm Password</label>
            <input asp-for="Input.ConfirmNewPassword" type="password" required />
            <span asp-validation-for="Input.ConfirmNewPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-change">Change Password</button>
        <a asp-page="/Landing" class="back-link">← Back to Dashboard</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
